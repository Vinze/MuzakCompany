<h1>Klanten</h1>
<p><%= link_to "Klant toevoegen", new_customer_path %></p>
<table class="table">
	<tr>
		<th>#</th>
		<th>Klantnaam</th>
		<th>Mood</th>
	</tr>
	<% @customers.each_with_index do |customer| %>
		<tr>
			<td><%= customer.id %></td>
			<td><%= link_to customer.name, customer %></td>
			<td><%= link_to customer.mood.description, customer.mood %></td>
		</tr>
	<% end %>
</table>