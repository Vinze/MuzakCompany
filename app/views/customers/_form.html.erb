<%= form_for(@customer) do |f| %>
	<%= f.label :name, "Klantnaam:" %>
	<%= f.text_field :name  %><br />

	<%= f.label :mood_id, "Mood:" %>
	<%= collection_select(:customer, :mood_id, Mood.find(:all, :order => "description"), :id, :description) %><br />

	<%= f.submit "Opslaan", class: "button" %>
<% end %>